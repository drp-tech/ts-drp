{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"target": "ES6",
		"module": "NodeNext",
		"lib": [
			"ES2023",
			"ES2023.Array",
			"DOM",
			"DOM.Iterable",
			"WebWorker"
		],
		"esModuleInterop": true,
		"moduleResolution": "NodeNext",
		"declaration": true,
		"declarationMap": true,
		"composite": true,
		"skipLibCheck": true,
		"stripInternal": true,
		"sourceMap": true,
		"resolveJsonModule": true,
		"paths": {
			"@ts-drp/*": [
				"./packages/*"
			]
		}
	}
}
