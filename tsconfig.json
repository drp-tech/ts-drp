{
	"compilerOptions": {
		"strict": true,
		"allowJs": true,
		"target": "ES2022",
		"module": "NodeNext",

		"esModuleInterop": true,
		"moduleResolution": "NodeNext",

		"declaration": true,
		"declarationMap": true,
		"composite": true,

		"skipLibCheck": true,
		"stripInternal": true,
		"resolveJsonModule": true,
		"paths": {
			"@topology-foundation/*": ["./packages/*"]
		}
	}
}
