{
  "name": "@topology-foundation/node",
  "version": "0.0.22",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topology-foundation/ts-topology.git"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist/ node_modules/",
    "cli": "tsx ./src/run.ts",
    "prebuild": "node -p \"'export const VERSION = ' + JSON.stringify(require('./package.json').version) + ';'\" > src/version.ts",
    "prepack": "tsc -b",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "tsx": "4.16.2",
    "typescript": "^5.4.5",
    "vitest": "^2.0.3"
  },
  "dependencies": {
    "@topology-foundation/crdt": "0.0.22",
    "@topology-foundation/network": "0.0.22",
    "@topology-foundation/object": "0.0.22",
    "commander": "^12.1.0"
  }
}
