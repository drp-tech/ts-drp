{
  "name": "@topology-foundation/node",
  "version": "0.0.2",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/topology-foundation/ts-topology.git"
  },
  "type": "module",
  "types": "./dist/src/index.d.ts",
  "files": [
    "src",
    "dist",
    "!dist/test",
    "!**/*.tsbuildinfo"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/index.d.ts",
      "import": "./dist/src/index.js"
    }
  },
  "scripts": {
    "build": "tsc -b",
    "clean": "rm -rf dist/ node_modules/",
    "node": "tsx ./src/run_node.ts",
    "relay": "tsx ./src/run_relay.ts",
    "start": "tsx ./src/index.ts",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/node": "^20.14.2",
    "tsx": "^4.15.6",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  },
  "dependencies": {
    "@topology-foundation/crdt": "0.0.2",
    "@topology-foundation/network": "0.0.2",
    "@topology-foundation/object": "0.0.2"
  }
}
