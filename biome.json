{
	"$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
	"files": {
		"ignore": [
			"**/dist/*",
			"**/docs/*",
			"**/doc/*",
			"**/*_pb.js",
			"**/*_pb.ts",
			"**/bundle/*",
			"coverage/*"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"overrides": [
		{
			"include": ["tests/**"]
		}
	]
}
